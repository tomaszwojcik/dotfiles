[core]
  excludesfile = ~/.gitignore
  editor       = vim

[push]
  default = simple

[color]
  ui = auto

[color "diff"]
  meta       = yellow
  frag       = magenta
  old        = red
  new        = green
  whitespace = red reverse

[color "status"]
  added     = green
  changed   = yellow
  untracked = red

[alias]
  st   = status -sb
  ci   = commit
  br   = branch
  co   = checkout
  df   = diff
  dc   = diff --cached
  lgp  = log -p
  l    = log --graph --decorate --oneline
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lolp = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ %cn " --decorate
  ls   = ls-files
  undo = reset --soft HEAD^
  a    = add -A
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
